{
  "compilerOptions": {
    "baseUrl": "./",
    "jsx": "react",
    "module": "commonjs",
    "target": "es6",
    "outDir": "./build",
    "sourceMap": true,
    "moduleResolution": "node",
    "removeComments": true,
    "allowJs": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "paths": {
      "@src/*": ["client/src/*"]
    }
  },
  "include": [
    "server/**/*"
  ]
}
